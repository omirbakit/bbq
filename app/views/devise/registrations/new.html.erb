<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group col-md-4">
    <b><%= f.label :email %><br/></b>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group col-md-4">
    <b><%= f.label :Имя %><br/></b>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group col-md-4">
    <b><%= f.label :Пароль %></b>
    <% if @minimum_password_length %>
    <em>(Не менее <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group col-md-4">
    <b><%= f.label :Подтверждение_пароля %><br/></b>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to "Забыли пароль?", new_password_path(resource_name) %>